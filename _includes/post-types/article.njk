<article class="h-entry post-type-article">
  <header>
    {% if name %}
      <h1 class="p-name">{{ name }}</h1>
    {% endif %}
    <time class="dt-published" datetime="{{ date | date('iso') }}">
      <a href="{{ page.url }}">{{ date | date('iso') }}</a>
    </time>
  </header>
  
  {% if summary %}
    <div class="p-summary">{{ summary | markdownify | safe }}</div>
  {% endif %}
  
  <div class="e-content">
    {{ content | safe }}
  </div>
  
  {% if category %}
    <footer>
      <p class="categories">
        Filed under: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>