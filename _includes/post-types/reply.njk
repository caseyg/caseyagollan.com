<article class="h-entry post-type-reply">
  <time class="dt-published" datetime="{{ date | date('iso') }}">
    <a href="{{ page.url }}">{{ date | date }}</a>
  </time>
  
  <div class="reply-content">
    <p class="reply-context">
      ↩️ In reply to: <a href="{{ data['in-reply-to'] }}" class="u-in-reply-to">{{ data['in-reply-to'] }}</a>
    </p>
    
    <div class="e-content">
      {{ content | safe }}
    </div>
  </div>
  
  {% if category %}
    <footer>
      <p class="categories">
        Tagged: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>