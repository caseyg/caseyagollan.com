<article class="h-entry post-type-video">
  <time class="dt-published" datetime="{{ date | date('iso') }}">
    <a href="{{ page.url }}">{{ date | date }}</a>
  </time>
  
  <div class="video-content">
    {% if video %}
      {% for vid in video %}
        <figure>
          <video controls class="u-video">
            <source src="{{ vid.url or vid }}" type="{{ vid.type or 'video/mp4' }}">
            Your browser does not support the video element.
          </video>
          {% if vid.name or name %}
            <figcaption>{{ vid.name or name }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    {% endif %}
    
    {% if content %}
      <div class="e-content">
        {{ content | safe }}
      </div>
    {% endif %}
  </div>
  
  {% if category %}
    <footer>
      <p class="categories">
        Tagged: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>