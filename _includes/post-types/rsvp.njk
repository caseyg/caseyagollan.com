<article class="h-entry post-type-rsvp">
  
  <div class="rsvp-content">
    {% if data['in-reply-to'] %}
      <p class="rsvp-context">
        {% if rsvp == "yes" %}
          ‚úÖ RSVPed yes to:
        {% elif rsvp == "no" %}
          ‚ùå RSVPed no to:
        {% elif rsvp == "maybe" %}
          ‚ùì RSVPed maybe to:
        {% elif rsvp == "interested" %}
          ü§î RSVPed interested to:
        {% else %}
          üìÖ RSVPed to:
        {% endif %}
        <a href="{{ data['in-reply-to'] }}" class="u-in-reply-to">{{ data['in-reply-to'] }}</a>
      </p>
    {% endif %}
    
    <data class="p-rsvp" value="{{ rsvp }}">{{ rsvp }}</data>
    
    {% if content %}
      <div class="e-content">
        {{ content | safe }}
      </div>
    {% endif %}
  </div>
  
  {% if category %}
    <footer>
      <p class="categories">
        Tagged: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>