<article class="h-event post-type-event">
  <header>
    <h1 class="p-name">{{ name }}</h1>
  </header>
  
  <div class="event-details">
    <p class="event-time">
      <strong>When:</strong> 
      <time class="dt-start" datetime="{{ start }}">{{ start | date('iso') }}</time>
      {% if end %}
        to <time class="dt-end" datetime="{{ end }}">{{ end | date('iso') }}</time>
      {% endif %}
    </p>
    
    {% if location %}
      <p class="event-location">
        <strong>Where:</strong> 
        <span class="p-location">{{ location }}</span>
      </p>
    {% endif %}
    
    {% if url and url != page.url %}
      <p class="event-url">
        <strong>Event page:</strong> 
        <a href="{{ url }}" class="u-url">{{ url }}</a>
      </p>
    {% endif %}
  </div>
  
  {% if content %}
    <div class="e-content">
      {{ content | safe }}
    </div>
  {% endif %}
  
  {% if category %}
    <footer>
      <p class="categories">
        Tagged: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>