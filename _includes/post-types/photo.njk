<article class="h-entry post-type-photo">
  <time class="dt-published" datetime="{{ date | date('iso') }}">
    <a href="{{ page.url }}">{{ date | date('iso') }}</a>
  </time>
  
  <div class="photo-content">
    {% if photo %}
      {% for img in photo %}
        <figure>
          <img src="{{ img.url or img }}" 
               alt="{{ img.alt or data['mp-photo-alt'][loop.index0] or 'Photo' }}" 
               class="u-photo" />
          {% if img.alt or data['mp-photo-alt'][loop.index0] %}
            <figcaption>{{ img.alt or data['mp-photo-alt'][loop.index0] }}</figcaption>
          {% endif %}
        </figure>
      {% endfor %}
    {% endif %}
    
    {% if content %}
      <div class="e-content">
        {{ content | safe }}
      </div>
    {% endif %}
  </div>
  
  {% if category %}
    <footer>
      <p class="categories">
        Tagged: 
        {% for cat in category %}
          <span class="p-category">{{ cat }}</span>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </footer>
  {% endif %}
  
  {% if syndication %}
    <p class="syndication">
      Also posted on: 
      {% for link in syndication %}
        <a href="{{ link }}" class="u-syndication">
          {%- if "social.coop" in link -%}
            Mastodon
          {%- elif "bsky.app" in link -%}
            Bluesky
          {%- else -%}
            {{ link | replace("https://", "") }}
          {%- endif -%}
        </a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</article>