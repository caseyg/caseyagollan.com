---
layout: posts-base
---

{# For individual posts, create a post object for consistency #}
{% set post = {
  data: {
    title: title,
    bookmarkOf: bookmarkOf,
    'bookmark-of': data['bookmark-of'],
    inReplyTo: inReplyTo,
    'in-reply-to': data['in-reply-to'],
    'repost-of': data['repost-of'],
    'like-of': data['like-of'],
    'jam-of': data['jam-of'],
    photo: photo,
    audio: audio,
    video: video,
    start: start,
    name: name or title,
    rsvp: rsvp,
    syndication: syndication,
    category: category,
    tags: tags
  },
  templateContent: content,
  date: date,
  url: page.url,
  isSingle: true
} %}

{% include "post-display.njk" %}

{# Navigation based on path #}
<nav class="post-navigation">
  <p>
    {% if page.inputPath and "/bookmarks/" in page.inputPath %}
      <a href="/bookmarks/">← Back to bookmarks</a>
    {% elif page.inputPath and "/notes/" in page.inputPath %}
      <a href="/notes/">← Back to notes</a>
    {% else %}
      <a href="/posts/">← Back to all posts</a>
    {% endif %}
  </p>
</nav>
